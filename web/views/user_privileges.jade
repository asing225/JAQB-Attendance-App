extends layout

script(type='text/javascript', src='/js/datatable.js')

block content
  h1= title
  p Welcome to #{title}

  h2 Users Listing
  table(id="mytab", class="table table-striped table-bordered")
    thead
      tr
        th First Name
        th Last Name
        th Level
        th
    tbody
      each row in users
        tr
          each item in row
            td(id="class-" + item) #{item}  
          td 
            button(type='submit', onclick='changePrivilege("#{row}")') Change Privilege