extends layout

block content

  div(class = "w3-row-padding")
    div(class = "w3-col w3-white w3-padding"  id="courselist")
      h2 Course Listing
      div(id="tableDiv")
        table(id="mytab", class="table table-striped table-bordered")
          thead(align="left")
            tr
              th Code
              th Course Name
              th Days
              th Time
              th Instructor
          tbody
            each item in courses
              tr
                each row in item
                  td(id="class-" + row) #{row}

  div(class = "w3-row-padding w3-section")
    div(class = "w3-white w3-col w3-border w3-padding l12 s12")
      h2 Add Courses    
      form(name="add-course", action="add-course", method="post")   
        div.input
          div(class="w3-col l2 w3-padding")  
            span.label Course Code 
            br
            input(type="text", name="code", placeholder="Ex. SER 517")    
          div(class="w3-col l2 w3-padding") 
            span.label Course Name    
            br
            input(type="text", name="name")     
          div(class="w3-col l2 w3-padding") 
            span.label Meeting Days 
            br
            input(type="text", name="days", placeholder="MO,TU,WE,TH,FR")    
          div(class="w3-col l2 w3-padding") 
            span.label Meeting Time  
            br
            input(type="time", name="time") 
          div(class="w3-col l2 w3-padding") 
            span.label Course Instructor 
            br
            input(type="text", name="instructor")
          br
          div(class="w3-col l1 w3-padding")   
          div.action(class="w3-col l1 w3-padding") 
            input(type="submit", value="Add", class="w3-button w3-light-gray w3-hover-red")

    div(class = "w3-white w3-col w3-border w3-padding l12 s12")
      h2(class="w3-col l4") Add Multiple Courses
      form(method="post", action="/upload-csv", enctype="multipart/form-data")
        div.input(class="w3-col l6 w3-padding")
          br
          span.label Upload a CSV file 
          input(type="file", name="document")
        div(class="w3-col l1")
        div.actions(class="w3-col l1")
          br
          input(type="submit", value = "Submit"  class="w3-button w3-light-gray w3-hover-red")

  div(class = "w3-row-padding w3-section")
    div(class = "w3-white w3-col w3-padding l4 w3-border")
      h2 Change User Privileges
      button(type="button", onclick="window.location.href = '/user_privileges_page';" class="w3-button w3-light-gray w3-hover-red") User Privileges

    div(class = "w3-white w3-col w3-padding l4 w3-border")
      h2 Assign Courses to Instructors
      button(type="button", onclick="window.location.href = '/assign_courses';" class="w3-button w3-light-gray w3-hover-red") Assign Courses to Instructors
    div(class = "w3-white w3-col w3-padding l4 w3-border")
      h2 Delete Course
      form(name="delete-course", action="delete-course" method="post")
        div.input(style="float:left;" class="w3-col l10")
          span.label Course Code 
          input(type="text", name="courseCode" placeholder="Ex. SER 517") 
        div(class="we-col l1")  
        div.actions(class="w3-col l1")
          input(type="submit", value="Delete" class="w3-button w3-light-gray w3-hover-red") 

